@model IEnumerable<ListarCondutorViewModel>
@{
    ViewBag.Title = "Listar Condutor";
}

<div class="col">
    <a class="btn btn-primary px-4 mt-3" href="/Condutor/Inserir">
        <i class="bi bi-circle-add"></i>
        Inserir Novo Condutor
    </a>

    <div class="row gap-2 my-3 my-xl-5">
        @foreach (var condutorVm in Model)
        {
            <div class="card col-lg-4 col-xl-3">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="p-0">@condutorVm.Id</h5>

                    <div class="text-end d-flex align-items-center gap-3">
                        <a title="Detalhes"
                           class="text-info-emphasis fs-5"
                           href="/Condutor/Detalhes/@condutorVm.Id">
                            <i class="bi bi-search"></i>
                        </a>
                        <a title="Editar"
                           class="text-info-emphasis fs-5"
                           href="/Condutor/Editar/@condutorVm.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a title="Excluir"
                           class="text-info-emphasis fs-5" href="/Condutor/Excluir/@condutorVm.Id">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>

                <div class="card-body d-grid ga-2 justify-content-center">
                    <h5 class="card-title">@condutorVm.Nome</h5>
                        @if(condutorVm.ClienteCondutor is false)
                        {
                            <span>Cliente: @condutorVm.Cliente<br/></span>
                        }
                    @* <p class="card-text">Nome do Cliente: @condutorVm.Cliente</p> *@
                    <p class="card-text">CPF: @condutorVm.Cpf</p>
                    <p class="card-text">CNH: @condutorVm.Cnh</p>
                    <p class="card-text">Validade: @condutorVm.ValidaCnh.ToShortDateString()</p>
                </div>
            </div>
        }
    </div>
</div>
