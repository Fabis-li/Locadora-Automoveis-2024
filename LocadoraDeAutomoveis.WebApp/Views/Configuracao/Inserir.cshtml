@model InserirConfiguracaoViewModel
@{
    ViewBag.Title = "Inserir Configurações";
}

<div class="col">
    <div class="row gap-3 my-3 my-xl-5">
        <form class="col-lg-6 d-grid gap-3 fs-5" asp-action="Inserir">
            <div>
                <label class="control-label fw-semibold mb-1">Preço da Gasolina:</label>
                <input class="form-control mb-1" asp-for="PrecoGasolina"  type="number" step="0.01"/>
                <span class="text-danger fs-6" asp-validation-for="PrecoGasolina"></span>
            </div>
            
            <div>
                <label class="control-label fw-semibold mb-1">Preço da Gás:</label>
                <input class="form-control mb-1" asp-for="PrecoGas" type="number" step="0.01" />
                <span class="text-danger fs-6" asp-validation-for="PrecoGas"></span>
            </div>
            
            <div>
                <label class="control-label fw-semibold mb-1">Preço do Diesel:</label>
                <input class="form-control mb-1" asp-for="PrecoDiesel" type="number" step="0.01" />
                <span class="text-danger fs-6" asp-validation-for="PrecoDiesel"></span>
            </div>
            
            <div>
                <label class="control-label fw-semibold mb-1">Preço do Álcool:</label>
                <input class="form-control mb-1" asp-for="PrecoAlcool" type="number" step="0.01" />
                <span class="text-danger fs-6" asp-validation-for="PrecoAlcool"></span>
            </div>

            <div class="d-grid gap-2 d-md-block mt-4">
                <button class="btn btn-primary px-5">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>

                <a class="btn btn-outline-primary px-5" href="/Consfiguracao/listar">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>
            </div>
        </form>
    </div>
</div>

