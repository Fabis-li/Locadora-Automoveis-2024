@model IEnumerable<ListarPlanoCobrancaViewModel>
@{
    ViewBag.Title = "Listar Planos de Cobrança";
}

<div class="col">
    <a class="btn btn-primary px-4 mt-3" href="/PlanoCobranca/Inserir">
        <i class="bi bi-circle-add"></i>
        Inserir Novo Plano de Cobrança
    </a>

    <div class="row gap-2 my-3 my-xl-5">
        @foreach (var planoVm in Model)
        {
            <div class="card col-lg-4 col-xl-3">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="p-0">@planoVm.Id</h5>

                    <div class="text-end d-flex align-items-center gap-3">
                        <a title="Detalhes"
                           class="text-info-emphasis fs-5"
                           href="/PlanoCobranca/Detalhes/@planoVm.Id">
                            <i class="bi bi-search"></i>
                        </a>
                        <a title="Editar"
                           class="text-info-emphasis fs-5"
                           href="/PlanoCobranca/Editar/@planoVm.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a title="Excluir"
                           class="text-info-emphasis fs-5" href="/PlanoCobranca/Excluir/@planoVm.Id">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>

                <div class="card-body d-grid ga-2">
                    <h5 class="card-title">Grupo de Automóveis: @planoVm.GrupoAutomovel</h5>
                    <label>Preço Diário (Diário): @planoVm.PrecoDiarioPlanoDiario.ToString("C2")</label>
                    <label>Preço por Km (Diário): @planoVm.PrecoPorKmPlanoDiario.ToString("C2")</label>
                    <label>Km Diponível (Controlado): @planoVm.KmDisponivelPlanoControlado Km(s)</label>
                    <label>Preço Diário (Controlado): @planoVm.PrecoDiarioPlanoControlado.ToString("C2")</label>
                    <label>Preço por Km Excedido (Controlado): @planoVm.PrecoPorKmExcedido.ToString("C2")</label>
                    <label>Preço Diário (Livre): @planoVm.PrecoDiarioPlanoLivre.ToString("C2")</label>
                </div>
            </div>
        }
    </div>
</div>
