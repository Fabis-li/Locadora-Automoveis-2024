@model IEnumerable<ListarAutomoveisViewModel>
@{
    ViewBag.Title = "Listagem de Carros";
}

<div class="col">
    <a class="btn btn-primary px-4 mt-3" href="/Automovel/Inserir">
        <i class="bi bi-circle-add"></i>
        Inserir Novo Automóvel
    </a>

    <div class="row gap-2 my-3 my-xl-5">
        @foreach (var automovel in Model)
        {
            <div class="card col-lg-4 col-xl-3 px-0">
                <img 
                    src="@Url.Action("ObterFoto", "Automovel", new {id = automovel.Id})" 
                    alt="@automovel.Modelo" 
                    class="card-img-top"/>

                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="p-0">@automovel.Id</h5>

                    <div class="text-end d-flex align-items-center gap-3">
                        <a title="Detalhes"
                           class="text-info-emphasis fs-5"
                           href="/automovel/detalhes/@automovel.Id">
                            <i class="bi bi-search"></i>
                        </a>
                        <a title="Editar"
                           class="text-info-emphasis fs-5"
                           href="/automovel/editar/@automovel.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a title="Excluir"
                           class="text-info-emphasis fs-5" href="/Automovel/Excluir/@automovel.Id">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>

                <div class="card-body d-grid ga-2">
                    <h5 class="card-title">Modelo: @automovel.Modelo</h5>
                    <label>Marca: @automovel.Marca</label>
                    <label>Cor: @automovel.Cor</label>
                    <label>Placa: @automovel.Placa</label>
                    <label>Combustível: @automovel.tipoCombustivel</label>

                </div>
            </div>
        }
    </div>
</div>