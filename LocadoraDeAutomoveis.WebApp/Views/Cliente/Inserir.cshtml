@using LocadoraDeAutomoveis.Dominio.ModuloCliente
@model InserirClienteViewModel
@{
    ViewBag.Title = "Inserir Cliente";
}

<div class="col">
    <div class="row gap-3 my-3 my-xl-5">
        <form class="col-lg-6 d-grid gap-3 fs-5" asp-action="Inserir">
            <div>
                <label class="control-label fw-semibold mb-1">Nome</label>
                <input class="form-control mb-1" asp-for="Nome" />
                <span class="text-danger fs-6" asp-validation-for="Nome"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">RG</label>
                <input class="form-control mb-1" asp-for="Rg" />
                <span class="text-danger fs-6" asp-validation-for="Rg"></span>
            </div>
            
            <div>
                <label class="control-label fw-semibold mb-1">CNH</label>
                <input class="form-control mb-1" asp-for="Cnh" />
                <span class="text-danger fs-6" asp-validation-for="Cnh"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Telefone</label>
                <input class="form-control mb-1" asp-for="Telefone" />
                <span class="text-danger fs-6" asp-validation-for="Telefone"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Tipo de Cadastro</label>
                <select class="form-control mb-1" asp-for="TipoCliente" asp-items="Html.GetEnumSelectList<TipoClienteEnum>()"></select>
                <span class="text-danger fs-6" asp-validation-for="TipoCliente"></span>
            </div>

            <div>
                <label id="lblNumeroDocumento" class="control-label fw-semibold mb-1">Número do Documento</label>
                <input class="form-control mb-1" asp-for="NumeroDocumento" />
                <span class="text-danger fs-6" asp-validation-for="NumeroDocumento"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Cidade</label>
                <input class="form-control mb-1" asp-for="Cidade" />
                <span class="text-danger fs-6" asp-validation-for="Cidade"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Estado</label>
                <input class="form-control mb-1" asp-for="Estado" />
                <span class="text-danger fs-6" asp-validation-for="Estado"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Bairro</label>
                <input class="form-control mb-1" asp-for="Bairro" />
                <span class="text-danger fs-6" asp-validation-for="Bairro"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Rua</label>
                <input class="form-control mb-1" asp-for="Rua" />
                <span class="text-danger fs-6" asp-validation-for="Rua"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Número</label>
                <input class="form-control mb-1" asp-for="Numero" />
                <span class="text-danger fs-6" asp-validation-for="Numero"></span>
             </div>
        
            <div class="d-grid gap-2 d-md-block mt-4">
                <button class="btn btn-primary px-5">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>

                <a class="btn btn-outline-primary px-5" href="/Cliente/listar">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>
            </div>
        </form>
    </div>
</div>

