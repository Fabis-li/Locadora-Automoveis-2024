@model IEnumerable<ListarGrpAutomoveisViewModel>﻿

@{
    ViewBag.Title = "Listagem Grupos de Carros";
}

<div class="col">
    <a class="btn btn-primary px-4 mt-3" href="/GrpAutomoveis/Inserir">
        <i class="bi bi-circle-add"></i>
        Inserir Novo Grupo de Automóveis
    </a>

    <div class="row gap-2 my-3 my-xl-5">
        @foreach (var grpVm in Model)
        {
            <div class="card col-lg-4 col-xl-3">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="p-0">@grpVm.Id</h5>

                    <div class="text-end d-flex align-items-center gap-3">
                        <a
                            title="Detalhes"
                            class="text-info-emphasis fs-5"
                            href="/GrpAutomoveis/Detalhes/@grpVm.Id">
                            <i class="bi bi-search"></i>
                        </a>
                        <a
                            title="Editar"
                            class="text-info-emphasis fs-5"
                            href="/GrpAutomoveis/Editar/@grpVm.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a
                            title="Excluir"
                            class="text-info-emphasis fs-5" href="/GrpAutomoveis/Excluir/@grpVm.Id">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>

                <div class="card-body d-grid ga-2 justify-content-center">
                    <h5 class="card-title">Grupo de Carros: @grpVm.Nome</h5>
                    @* <label>Grupo de Carros: @grpVm.Nome</label> *@
                </div>
            </div>
        }
    </div>
</div>