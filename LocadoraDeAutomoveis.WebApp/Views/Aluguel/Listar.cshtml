@model IEnumerable<ListarAluguelViewModel>
@{
    ViewBag.Title = "Listar Alugueis";
}

<div class="col">
    <a class="btn btn-primary px-4 mt-3" href="/Aluguel/Inserir">
        <i class="bi bi-circle-add"></i>
        Inserir Novo Aluguel
    </a>

    <div class="row gap-2 my-3 my-xl-5">
        @foreach (var aluguelVm in Model)
        {
            <div class="card col-lg-4 col-xl-3">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="p-0">@aluguelVm.Id</h5>

                    <div class="text-end d-flex align-items-center gap-3">
                        @if (aluguelVm.DataRetorno == DateTime.Now)
                        {
                            <a title="Detalhes"
                               class="text-info-emphasis fs-5"
                               href="/Aluguel/ConcluirDevolucao/@aluguelVm.Id">
                                <i class="bi bi-coin"></i>
                            </a>
                        }

                        <a title="Devolução"
                           class="text-info-emphasis fs-5"
                           href="/Aluguel/Devolucao/@aluguelVm.Id">
                            <i class="bi bi-piggy-bank"></i>
                        </a>
                        <a title="Editar"
                           class="text-info-emphasis fs-5"
                           href="/Aluguel/Editar/@aluguelVm.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a title="Excluir"
                           class="text-info-emphasis fs-5" href="/Aluguel/Excluir/@aluguelVm.Id">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>

                <div class="card-body d-grid ga-2 justify-content-center">
                    <h5 class="card-title">@aluguelVm.Automovel</h5>
                    <p class="card-text">Nome do Condutor: @aluguelVm.Condutor</p>
                    <p class="card-text">Tipo Plano: @aluguelVm.TipoPlanoCobranca</p>
                    <p class="card-text">Data de Saída: @aluguelVm.DataSaida.ToShortDateString()</p>
                    <p class="card-text">Retorno Previsto: @aluguelVm.DataRetorno.ToShortDateString()</p>
                    <p class="card-text">Valor Entrada R$: @aluguelVm.ValorEntrada</p>
                    <p class="card-text">Status: @aluguelVm.Status</p>
                </div>
            </div>
        }
    </div>
</div>